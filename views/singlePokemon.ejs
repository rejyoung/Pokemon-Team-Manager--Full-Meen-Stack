<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <link
      rel="stylesheet"
      href="/css/mobile/M-single-species.css"
      media="screen and (max-width: 699px)"
    />
    <link
      rel="stylesheet"
      href="/css/desktop/DT-single-species.css"
      media="screen and (min-width: 700px)"
    />
  </head>
  <body>
    <%- include("./partials/header") %>

    <main>
      <div class="pokemon-details <%=pokemon.Type[0]%>-details">
        <div class="poke-info">
          <!-- prettier-ignore -->
          <% let pokeName = pokemon.Name.startsWith('mr.') ? pokemon.Name[0].toUpperCase() + pokemon.Name.slice(1, 4) + pokemon.Name[4].toUpperCase() + pokemon.Name.slice(5): pokemon.Name[0].toUpperCase() + pokemon.Name.slice(1)%>
          <p>Species</p>
          <div class="info-and-types">
            <div class="name-and-num">
              <h3><%=pokeName%></h3>
              <p>Pokedéx No. <span><%=String(pokemon.PokedexID).padStart(4, "0")%></span></p>
              <!-- <h4>#<%=String(pokemon.PokedexID).padStart(4, "0")%></h4> -->
            </div>
            <div class="types">
              <%pokemon.Type.forEach(type => { %>
              <p class="type <%=type%>"><%=type%></p>
              <%})%>
            </div>
          </div>
          <div class="owners-container">
            <h5>Owners</h3>
            <div class="species-owners">
              <% trainers.forEach((trainer) => { %>
              <div>
                <a href="/trainer/<%=trainer.Username%>"> <%= trainer.DisplayName %> </a>
              </div>
              <% }) %>
          </div>
          </div>
        </div>
        <img alt="A typical <%=pokeName%>" src="<%=pokemon.ImgPath%>">
      </div>
      <div class="back-btn"><a href="/pokedex" class="pseudo-button">< Back to Pokédex</a></div>
    </main>
    <%- include("./partials/footer")%>
  </body>
</html>
